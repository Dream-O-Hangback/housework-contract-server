{
  "compilerOptions": {
    "module": "commonjs",
		"target": "es2017",
		"outDir": "./dist",
		"baseUrl": "./",
		"sourceMap": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "incremental": true,
    "paths": {
      "@auth/*": [
        "src/auth/*"
      ],
      "@common/*": [
        "src/common/*"
      ],
      "@mails/*": [
        "src/mails/*"
      ],
      "@middlewares/*": [
        "src/middlewares/*"
      ],
      "@models/*": [
        "src/models/*"
      ],
      "@providers/*": [
        "src/providers/*"
      ],
      "@repositories/*": [
        "src/repositories/*"
      ]
    },
  }
}
